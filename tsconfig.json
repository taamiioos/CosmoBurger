{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "jsx": "react",
    "lib": ["dom", "esnext"]
  },
  "include": [
    "src",
    "global.d.ts"
  ],
  "exclude": ["node_modules"]
}
